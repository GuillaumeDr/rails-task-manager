
<div class="container">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
        <%# <p><i class="fa-solid fa-trash-can"></i></p> %>
        <%= link_to task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }  do %>
            <i class="fa-solid fa-trash-can"></i>
            <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to tasks_new_path, class:"btn btn-success" do%>
  <i class="fa-solid fa-file-circle-plus">  Add new task !</i>
  <% end %>
</div>
